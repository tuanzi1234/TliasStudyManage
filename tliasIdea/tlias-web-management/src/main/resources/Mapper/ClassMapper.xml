<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ClassMapper">
    <!--    添加班级-->
    <insert id="add">
        INSERT INTO clazz (name, room, begin_date, end_date, master_id, subject, create_time, update_time)
        VALUES (#{name}, #{room}, #{beginDate}, #{endDate}, #{masterId}, #{subject}, #{createTime}, #{updateTime})
    </insert>
    <!--    根据id修改班级信息-->
    <update id="updateById">
        UPDATE clazz
        <set>
            <if test="name != null and name != null">name = #{name},</if>
            <if test="room != null">room = #{room},</if>
            <if test="beginDate != null">begin_date = #{beginDate},</if>
            <if test="endDate != null">end_date = #{endDate},</if>
            <if test="masterId != null">master_id = #{masterId},</if>
            <if test="subject != null">subject = #{subject},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE id = #{id}
    </update>
    <!--    根据id删除班级信息-->
    <delete id="deleteById">
        DELETE
        FROM clazz
        WHERE id = #{id}
    </delete>

    <!--    分页查询所有班级，并根据masterId联立员工表返回对应的老师姓名-->
    <select id="findByPage" resultType="com.example.pojo.Class">
        SELECT c.*, e.name masterName
        FROM clazz c
        LEFT JOIN emp e ON c.master_id = e.id
        <where>
            <if test="name != null and name != ''">
                AND c.name LIKE CONCAT('%',#{name},'%')
            </if>
            <if test="begin != null and end != null">
                AND begin_date BETWEEN #{begin} AND #{end}
            </if>
        </where>
        order by update_time desc
    </select>
    <!--    根据id查询班级信息-->
    <select id="findById" resultType="com.example.pojo.Class">
        SELECT *
        FROM clazz
        WHERE id = #{id}
    </select>
    <!--    查询所有班级信息-->
    <select id="findAll" resultType="com.example.pojo.Class">
        SELECT *
        FROM clazz
    </select>
</mapper>